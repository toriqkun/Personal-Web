<div class="container-wrapper">
  <div class="tech-container">
    <h2>ADD TECH STACK TOOLS</h2>
    <form id="techstackForm" class="with-spinner" action="/add-techstack" method="POST" enctype="multipart/form-data">
      {{! Image Tools }}
      <input type="file" name="image" class="custom-file" />

      {{! Name Tools }}
      <div class="input-group">
        <input type="text" name="nameTools" id="nameTools" placeholder="" />
        <label for="nameTools">Nama Tools</label>
      </div>

      {{! Submit Tools }}
      <button type="submit">Submit</button>
    </form>
  </div>
</div>

<!-- Spinner Overlay -->
<div id="overlaySpinner" class="hidden fixed inset-0 z-50 bg-black bg-opacity-50 flex justify-center items-center">
  <div class="bg-white p-6 rounded-xl shadow-xl flex flex-col items-center w-64 max-w-full">
    <div class="spinner-border h-12 w-12 mb-4"></div>
    <p class="text-gray-800 font-semibold text-center">Uploading...</p>
  </div>
</div>

<script src="/assets/js/alert.js"></script>