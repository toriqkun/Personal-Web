{{! MAIN CONTENT }}
<div class="container mx-auto px-6 py-12 md:py-24">
  {{! JUMBOTRON }}
  <div id="hero">
    <!-- Hero Section -->
    <div class="flex flex-col lg:flex-row justify-between items-center gap-8 lg:gap-16" style="margin-bottom: 132px;">
      <!-- Left Content - Profile Image -->
      <div class="profile-wrapper">
        <div class="gradient-border">
          <div class="content-box">
            <img src="/assets/img/madara minion.jpg" alt="Profile" class="profile-img" />
